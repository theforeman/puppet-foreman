# Outgoing email settings

production:
  delivery_method: :<%= scope.lookupvar("::foreman::email_delivery_method") %>
<%- if scope.lookupvar("::foreman::email_delivery_method") == 'smtp' -%>
  smtp_settings:
    address: <%= scope.lookupvar("::foreman::email_smtp_address") %>
    port: <%= scope.lookupvar("::foreman::email_smtp_port") %>
    domain: <%= scope.lookupvar("::foreman::email_smtp_domain") %>
    authentication: :<%= scope.lookupvar("::foreman::email_smtp_authentication") %>
  <%- if scope.lookupvar("::foreman::email_smtp_authentication") == 'login' -%>
    user_name: <%= scope.lookupvar("::foreman::email_smtp_user_name") %>
    password: <%= scope.lookupvar("::foreman::email_smtp_password") %>
  <%- end -%>
<%- end -%>
