<% @header = ''
   ERB.new(File.read(File.expand_path("_header.erb",File.dirname(file))), nil, nil, "@header").result(binding) -%>
---
<%= @header -%>
# Foreman Memcache plugin configuration file

:memcache:
  :hosts:
<% @hosts.each do |host| -%>
    - <%= host %>
<% end -%>
  :options:
    :namespace: <%= @namespace %>
    :expires_in: <%= @expires_in %>
    :compress: <%= @compress %>
