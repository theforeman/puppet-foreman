<% @header = ''
   ERB.new(File.read(File.expand_path("_header.erb",File.dirname(file))), nil, nil, "@header").result(binding) -%>
---
<%= @header -%>

:default_hostgroup:
  :facts_map:
<% @hostgroups.each do |group| -%>
<% group.each do |name, value| -%>
    '<%= name %>':
<% value.sort.each do |fact_name, fact_value| -%>
      '<%= fact_name %>': '<%= fact_value %>'
<% end -%>
<% end -%>
<% end -%>
